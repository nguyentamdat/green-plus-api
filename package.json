{
    "name": "green",
    "version": "0.0.0",
    "private": true,
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "server/*",
            "public/*"
        ],
        "ignore": [
            "**/__test__/**",
            "*.test.js",
            "*.spec.js"
        ]
    },
    "scripts": {
        "server": "node ./dist-server/bin/www",
        "watch:dev": "nodemon",
        "transpile": "babel ./server --out-dir dist-server",
        "clean": "rimraf dist-server",
        "build": "npm-run-all clean transpile",
        "dev": "NODE_ENV=development npm-run-all build server",
        "prod": "NODE_ENV=production npm-run-all build server",
        "start": "npm run prod"
    },
    "dependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "bcrypt": "^4.0.1",
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "dotenv": "^8.2.0",
        "express": "~4.16.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.14",
        "morgan": "~1.9.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "rimraf": "^3.0.2",
        "uuid": "^8.0.0"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    }
}
